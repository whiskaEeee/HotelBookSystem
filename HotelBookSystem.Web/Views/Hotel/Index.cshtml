@model List<Hotel>

<style>
    .my-table {
        background-color: #fff7d3; /* например, светло-голубой */
        color: #333;
    }

        .my-table th {
            background-color: #ffea86;
            color: white;
        }

        .my-table td {
            background-color: #fff6d1;
        }
</style>

<div class="container mt-5 px-2">

    <div class="table-responsive" >
        <table class="table my-table table-responsive table-bordered" style="border-color: black">

            <thead>
                <tr class="text-center">
                    <th scope="col" width="70%" class="text-dark">Название</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var hotel in Model)
                {
                    <tr class="text-center">
                        <td>@hotel.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Villa" asp-action="Update" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Villa" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>