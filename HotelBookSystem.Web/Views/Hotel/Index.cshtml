@model List<Hotel>

<div class="card shadow my-5">
    <div class="card-header border-0 text-light text-center dark blue"
         style="background-image: linear-gradient(-30deg, rgba(0, 118, 189, 0.1), transparent 100%);">
        <h3 class="mb-0">Отели</h3>
    </div>
    <table class="table mb-0">
        <thead>
            <tr>
                <th class="p-0" scope="col"></th>
                <th class="p-0" scope="col"></th>
                <th class="p-0" scope="col" width="30%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var hotel in Model)
            {
                <tr>
                    <td>
                        <div style="width: 60px; aspect-ratio: 1 / 1; overflow: hidden; border-radius: 50%;">
                            <img src="@hotel.ImageUrl" style="width: 100%; height: 100%; object-fit: cover;" />
                        </div>
                    </td>
                    <td style="font-size: 20px; vertical-align: middle;">
                        <div class="d-flex align-items-center" style="height: 100%;">
                            @hotel.Name
                        </div>
                    </td>
                    <td class="align-middle text-center">
                        <div class="d-flex justify-content-center align-items-center gap-2 w-100">
                            <a asp-controller="Hotel" asp-action="Update" asp-route-hotelId="@hotel.Id"
                               class="btn btn-success rounded">
                                <i class="bi bi-pencil-square"></i> Изменить
                            </a>
                            <a asp-controller="Hotel" asp-action="Delete" asp-route-hotelId="@hotel.Id"
                               class="btn btn-danger rounded">
                                <i class="bi bi-trash-fill"></i> Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex w-25" style="float: right;">
    <a asp-controller="Hotel" asp-action="Create" class="btn btn-dark rounded border w-100">
        <i class="bi bi-plus-circle"></i> Create
    </a>
</div>