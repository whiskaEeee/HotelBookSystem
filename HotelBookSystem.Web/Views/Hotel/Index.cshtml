@model List<Hotel>

<style>
    .my-table {
        background-color: #fff7d3;
        color: #333;
    }

        .my-table th {
            background-color: #077A7D;
            color: white;
        }

        .my-table td {
            background-color: #F5EEDD;
        }
</style>

<h2 class="text-center mb-0 mt-5">Hotels</h2>

<div class="container mt-5 px-2">

    <div class="table-responsive rounded-3">
        <table class="table my-table table-responsive table-bordered rounded" style="border-color: #077A7D">

            <thead>
                <tr class="text-center">
                    <th scope="col" width="70%" class="text-light">Название</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var hotel in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">@hotel.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Hotel" asp-action="Update" asp-route-hotelId="@hotel.Id" class="btn btn-success mx-2 rounded">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Hotel" asp-action="Delete" asp-route-hotelId="@hotel.Id" class="btn btn-danger mx-2 rounded">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>