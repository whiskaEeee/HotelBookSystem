@model List<Amenity>

<style>
    .my-table {
        background-color: #fff7d3;
        color: #333;
    }

        .my-table th {
            background-color: #077A7D;
            color: white;
        }

        .my-table td {
            background-color: #F5EEDD;
        }
</style>

<h2 class="text-center mb-0 mt-5">Amenities</h2>

<div class="container mt-5 px-2">

    <div class="table-responsive rounded-3">
        <table class="table my-table table-responsive table-bordered rounded" style="border-color: #077A7D">

            <thead>
                <tr class="text-center">
                    <th scope="col" class="text-light">Отель</th>
                    <th scope="col" class="text-light">Дополнительные функции</th>
                    <th width="40%"></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var amenity in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">@amenity.Hotel.Name</td>
                        <td class="align-middle">@amenity.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Amenity" asp-action="Update" asp-route-amenityId="@amenity.Id" class="btn btn-success mx-2 rounded">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Amenity" asp-action="Delete" asp-route-amenityId="@amenity.Id" class="btn btn-danger mx-2 rounded">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>




<div class="d-flex w-25" style="float: right;">
    <a asp-controller="Amenity" asp-action="Create" class="btn btn-primary rounded w-100">Create</a>
</div>



