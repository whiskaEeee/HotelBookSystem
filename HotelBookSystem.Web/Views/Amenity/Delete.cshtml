@model AmenityVM

<div class="card mt-2 mx-auto p-4 bg-light w-100">
    <div class="card-header border-0 text-light text-center dark blue"
         style="background-image: linear-gradient(-30deg, rgba(0, 118, 189, 0.1), transparent 100%);">
        <h3 class="mb-0">Изменить дополнительные функции</h3>
    </div>
    <div class="card-body bg-light">
        <div class="container">
            <form method="post" class="row" enctype="multipart/form-data">
                <input asp-for="Amenity.Id" hidden />
                <div class="controls">
                    <div class="row">
                        <div class="form-floating py-1 col-12">
                            <select disabled asp-for="@Model.Amenity.HotelId" asp-items="@Model.HotelList"
                                    class="form-control border shadow">
                                <option disabled selected>____Выберите отель____</option>
                            </select>
                            <label asp-for="Amenity.HotelId" class="ms-2"></label>
                            <span asp-validation-for="Amenity.HotelId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-floating py-1 col-12">
                            <div class="form-floating py-1 col-12">
                                <input disabled asp-for="Amenity.Name" class="form-control border shadow" />
                                <label asp-for="Amenity.Name" class="ms-2"></label>
                                <span asp-validation-for="Amenity.Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-floating py-1 col-12">
                            <textarea disabled asp-for="Amenity.Description"
                                      class="form-control border shadow auto-resize"
                                      rows="1"
                                      style="overflow:hidden;"></textarea>
                            <label asp-for="Amenity.Description" class="ms-2"></label>
                            <span asp-validation-for="Amenity.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-check-circle"></i> Удалить
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Amenity" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Отмена
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
        <script src="~/js/textarea_resize.js"></script>
    }
}