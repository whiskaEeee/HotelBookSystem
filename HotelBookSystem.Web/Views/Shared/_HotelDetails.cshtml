@model Hotel

@{
    bool useTextDark = ViewData["UseTextDark"] as bool? ?? false;
}

<div style="position: relative; z-index: 1;">
    <div class="row">
        <div class="col-12 col-md-5">
            <div style="width: 100%; aspect-ratio: 1 / 1; overflow: hidden; border-radius: 50%;">
                <img src="@Model.ImageUrl" style="width: 100%; height: 100%; object-fit: cover;" />
            </div>
        </div>
        <div class="col-12 col-md-7">
            <div class="row p-2">
                <div class="col-12">
                    <p class="card-title" style="font-size:xx-large; color: #0076bd;">@Model.Name</p>
                    <p class="card-text @(useTextDark ? "text-dark" : "")" style="font-size:large">
                        @Html.Raw(Model.Description)
                    </p>
                    @if (Model.Amenities != null && Model.Amenities.Count() > 0)
                    {
                        <p class="h5 @(useTextDark ? "text-dark" : "text-white")">Hotel Amenities</p>
                        <ul>
                            @foreach (var amenity in Model.Amenities)
                            {
                                <li class="@(useTextDark ? "text-dark" : "")">@amenity.Name</li>
                            }
                        </ul>
                    }
                </div>
            </div>
            <div class="row col-12">
                <div class="text-end p-0 pt-3 m-0">
                    <span class="float-right @(useTextDark ? "text-dark" : "")">Вместимость : @Model.Occupancy человек </span><br />
                    <p class="text-warning font-weight-bold pt-1">
                        USD
                        <span>
                            @Model.Price.ToString() / ночь
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>